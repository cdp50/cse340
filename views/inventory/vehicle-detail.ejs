<div class="background">
    <% if (title) { %>
    <h1><%= title %></h1>
    <% } else { 
          res.redirect('/') 
    } %>
    
    <% if (message) { %>
    <p class="notice"><%= message %></p>
    <% } %>
    
    <% if (htmlBody) { %>
    <div class="description"><%- htmlBody %></div>
    <% } %>
</div>