<div class="background">

    <% if (title) { %>
        <h1><%= title %></h1>
        <% } else { 
              res.redirect('/') 
        } %>

        <% if (message) { %>
        <div class="messageCentered"><p class="loginValid"><%= message %></p></div>
        <% } %>

        <% if (errors) { %>
            <ul class="notice">
           <% errors.array().forEach(error => { %>
             <li><%= error.msg %></li>
          <%  }) %>
           </ul>
          <% } %>

    <div class="register-box">


        <% if (client_type == "Client") { %>
            <h1>Welcome <%= name %></h1>
            <div class="messageCentered"><p class="loginValid">You're logged in.</p></div>
            <div class="buttons">
                <button onclick='window.location.href="<%= editAccountPath %>"'>Update Account Information</button>
            </div>
        <% } else if(client_type == "Admin" || client_type == "Employee") { %>
            <h2>Welcome <%= name %></h2>
            <div class="messageCentered"><p class="loginValid">You're logged in.</p></div>
            <div class="buttons">
                <button onclick='window.location.href="/inv/"' id="button2">Inventory Management Access</button>
                <button onclick='window.location.href="<%= editAccountPath %>"'>Update Account Information</button>
            </div>
            
        <% } %>

    </div>
</div>